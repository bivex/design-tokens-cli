{
  "color": {
    "$type": "color",
    "$description": "Color system with base colors and semantic variants",
    "base": {
      "$root": {
        "$value": {
          "colorSpace": "srgb",
          "components": [0.5, 0.5, 0.5],
          "hex": "#808080"
        }
      },
      "red": {
        "$value": {
          "colorSpace": "srgb",
          "components": [1, 0, 0],
          "hex": "#ff0000"
        }
      },
      "blue": {
        "$value": {
          "colorSpace": "srgb",
          "components": [0, 0, 1],
          "hex": "#0000ff"
        }
      }
    },
    "semantic": {
      "$extends": "{color.base}",
      "primary": {
        "$value": "{color.base.blue}"
      },
      "secondary": {
        "$value": "{color.base.red}"
      }
    }
  },
  "typography": {
    "$type": "typography",
    "base": {
      "$root": {
        "$value": {
          "fontFamily": ["Arial", "sans-serif"],
          "fontSize": { "value": 16, "unit": "px" },
          "fontWeight": 400,
          "lineHeight": 1.5
        }
      },
      "heading": {
        "$value": {
          "fontFamily": { "$ref": "#/typography/base/$root/$value/fontFamily" },
          "fontSize": { "value": 24, "unit": "px" },
          "fontWeight": 700,
          "lineHeight": 1.2
        }
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "$description": "Spacing scale",
    "small": { "$value": { "value": 8, "unit": "px" } },
    "medium": { "$value": { "value": 16, "unit": "px" } },
    "large": { "$value": { "value": 32, "unit": "px" } }
  }
}
