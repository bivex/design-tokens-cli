{
  "name": "design-tokens-cli",
  "version": "0.3.0",
  "type": "module",
  "description": "A comprehensive design tokens transformation CLI implementing the 2025.10 Design Tokens Format specification. Transform tokens to CSS, SCSS, ESM, JSON, and Tailwind CSS with group extensions, JSON Pointer references, and type inheritance",
  "keywords": [
    "design-tokens",
    "design-system",
    "css",
    "scss",
    "javascript",
    "cli",
    "tokens",
    "css-custom-properties",
    "build-tool"
  ],
  "main": "index.js",
  "bin": {
    "designTokens": "index.js",
    "design-tokens-cli": "index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "build": "echo 'Build complete - this is a CLI tool'",
    "example": "node index.js transform example/tokens.config.json",
    "clean": "rm -rf example/output node_modules bun.lockb",
    "lint": "echo 'No linter configured yet'",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bivex/design-tokens-cli.git"
  },
  "author": "Heydon Pickering (Fork maintained by Bivex)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bivex/design-tokens-cli/issues"
  },
  "homepage": "https://github.com/bivex/design-tokens-cli#readme",
  "jest": {
    "transform": {},
    "collectCoverageFrom": [
      "utils/**/*.js",
      "index.js",
      "!utils/**/test/**"
    ]
  },
  "dependencies": {
    "commander": "^12.1.0",
    "fs-jetpack": "^5.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
