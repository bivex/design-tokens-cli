{
  "semantic": {
    "$type": "color",
    "$description": "Semantic color tokens extending the base color system",
    "$extends": "{color.semantic}",
    "background": {
      "primary": { "$value": { "$ref": "#/color/base/secondary/50/$value" } },
      "secondary": { "$value": { "$ref": "#/color/base/secondary/100/$value" } },
      "tertiary": { "$value": { "$ref": "#/color/base/secondary/200/$value" } },
      "inverse": { "$value": { "$ref": "#/color/base/secondary/900/$value" } }
    },
    "content": {
      "primary": { "$value": { "$ref": "#/color/base/secondary/900/$value" } },
      "secondary": { "$value": { "$ref": "#/color/base/secondary/700/$value" } },
      "tertiary": { "$value": { "$ref": "#/color/base/secondary/500/$value" } },
      "inverse": { "$value": { "$ref": "#/color/base/secondary/50/$value" } }
    },
    "border": {
      "subtle": { "$value": { "$ref": "#/color/base/secondary/200/$value" } },
      "default": { "$value": { "$ref": "#/color/base/secondary/300/$value" } },
      "strong": { "$value": { "$ref": "#/color/base/secondary/400/$value" } }
    },
    "status": {
      "success": {
        "background": { "$value": "#dcfce7" },
        "content": { "$value": "#166534" },
        "border": { "$value": "#bbf7d0" }
      },
      "warning": {
        "background": { "$value": "#fef3c7" },
        "content": { "$value": "#92400e" },
        "border": { "$value": "#fde68a" }
      },
      "error": {
        "background": { "$value": "#fef2f2" },
        "content": { "$value": { "$ref": "#/color/base/accent/700/$value" } },
        "border": { "$value": { "$ref": "#/color/base/accent/200/$value" } }
      },
      "info": {
        "background": { "$value": "#eff6ff" },
        "content": { "$value": { "$ref": "#/color/base/primary/700/$value" } },
        "border": { "$value": { "$ref": "#/color/base/primary/200/$value" } }
      }
    }
  }
}
