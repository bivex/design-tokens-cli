{
  "typography": {
    "$description": "Luxury Italian Vogue typography system with elegant serif and refined sans-serif fonts",
    "font": {
      "family": {
        "primary": { "$value": "'Crimson Text', 'Times New Roman', serif" },
        "secondary": { "$value": "'Source Sans Pro', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif" },
        "mono": { "$value": "'JetBrains Mono', 'Fira Code', Monaco, 'Cascadia Code', monospace" },
        "heading": { "$value": "{typography.font.family.primary}" },
        "body": { "$value": "{typography.font.family.secondary}" },
        "code": { "$value": "{typography.font.family.mono}" },
        "accent": { "$value": "'Playfair Display', 'Times New Roman', serif" }
      },
      "weight": {
        "thin": { "$value": "100" },
        "light": { "$value": "300" },
        "regular": { "$value": "400" },
        "medium": { "$value": "500" },
        "semibold": { "$value": "600" },
        "bold": { "$value": "700" },
        "extrabold": { "$value": "800" },
        "black": { "$value": "900" }
      }
    },
    "size": {
      "xs": { "$value": "0.75rem" },
      "sm": { "$value": "0.875rem" },
      "base": { "$value": "1rem" },
      "lg": { "$value": "1.125rem" },
      "xl": { "$value": "1.25rem" },
      "2xl": { "$value": "1.5rem" },
      "3xl": { "$value": "1.875rem" },
      "4xl": { "$value": "2.25rem" },
      "5xl": { "$value": "3rem" },
      "6xl": { "$value": "3.75rem" }
    },
    "line": {
      "height": {
        "tight": { "$value": "1.25" },
        "snug": { "$value": "1.375" },
        "normal": { "$value": "1.5" },
        "relaxed": { "$value": "1.625" },
        "loose": { "$value": "2" }
      }
    },
    "letter": {
      "spacing": {
        "tighter": { "$value": "-0.05em" },
        "tight": { "$value": "-0.025em" },
        "normal": { "$value": "0em" },
        "wide": { "$value": "0.025em" },
        "wider": { "$value": "0.05em" },
        "widest": { "$value": "0.1em" }
      }
    }
  }
}
