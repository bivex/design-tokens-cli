{
  "component": {
    "$type": "color",
    "$description": "Component-specific design tokens using 2025.10 features",
    "button": {
      "$extends": "{color.semantic}",
      "$description": "Button component color variants",
      "primary": {
        "background": { "$value": { "$ref": "#/color/base/primary/600/$value" } },
        "hover": { "$value": { "$ref": "#/color/base/primary/700/$value" } },
        "active": { "$value": { "$ref": "#/color/base/primary/800/$value" } },
        "text": { "$value": "#ffffff" },
        "border": { "$value": { "$ref": "#/color/base/primary/600/$value" } }
      },
      "secondary": {
        "background": { "$value": "#ffffff" },
        "hover": { "$value": { "$ref": "#/color/base/secondary/50/$value" } },
        "active": { "$value": { "$ref": "#/color/base/secondary/100/$value" } },
        "text": { "$value": { "$ref": "#/color/base/secondary/900/$value" } },
        "border": { "$value": { "$ref": "#/color/base/secondary/300/$value" } }
      },
      "success": {
        "background": { "$value": { "$ref": "#/color/semantic/success/$root/$value" } },
        "hover": { "$value": { "$ref": "#/color/semantic/success/light/$value" } },
        "active": { "$value": { "$ref": "#/color/semantic/success/dark/$value" } },
        "text": { "$value": "#ffffff" },
        "border": { "$value": { "$ref": "#/color/semantic/success/$root/$value/hex" } }
      },
      "danger": {
        "background": { "$value": { "$ref": "#/color/base/accent/600/$value" } },
        "hover": { "$value": { "$ref": "#/color/base/accent/700/$value" } },
        "active": { "$value": { "$ref": "#/color/base/accent/800/$value" } },
        "text": { "$value": "#ffffff" },
        "border": { "$value": { "$ref": "#/color/base/accent/600/$value/hex" } }
      }
    },
    "input": {
      "background": { "$value": "#ffffff" },
      "border": { "$value": { "$ref": "#/color/base/secondary/300/$value" } },
      "focus": { "$value": { "$ref": "#/color/base/primary/500/$value" } },
      "error": { "$value": { "$ref": "#/color/semantic/error/$root/$value" } },
      "text": { "$value": { "$ref": "#/color/base/secondary/900/$value" } },
      "placeholder": { "$value": { "$ref": "#/color/base/secondary/500/$value" } }
    },
    "card": {
      "background": { "$value": "#ffffff" },
      "border": { "$value": { "$ref": "#/color/base/secondary/200/$value" } },
      "shadow": {
        "$value": {
          "color": { "$ref": "#/color/base/secondary/900/$value" },
          "offsetX": { "value": 0, "unit": "px" },
          "offsetY": { "value": 1, "unit": "px" },
          "blur": { "value": 3, "unit": "px" },
          "spread": { "value": 0, "unit": "px" }
        }
      }
    }
  }
}
