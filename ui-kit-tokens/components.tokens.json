{
  "component": {
    "$description": "Component-specific tokens for landing page UI kit",
    "button": {
      "$description": "Button component tokens",
      "size": {
        "xs": {
          "height": { "$value": "2.25rem" },
          "paddingX": { "$value": "{spacing.size.3}" },
          "paddingY": { "$value": "{spacing.size.1.5}" },
          "fontSize": { "$value": "{typography.font.size.sm}" },
          "borderRadius": { "$value": "{border.radius.sm}" }
        },
        "sm": {
          "height": { "$value": "2.5rem" },
          "paddingX": { "$value": "{spacing.size.4}" },
          "paddingY": { "$value": "{spacing.size.2}" },
          "fontSize": { "$value": "{typography.font.size.sm}" },
          "borderRadius": { "$value": "{border.radius.sm}" }
        },
        "md": {
          "height": { "$value": "2.5rem" },
          "paddingX": { "$value": "{spacing.size.4}" },
          "paddingY": { "$value": "{spacing.size.2}" },
          "fontSize": { "$value": "{typography.font.size.sm}" },
          "borderRadius": { "$value": "{border.radius.md}" }
        },
        "lg": {
          "height": { "$value": "3rem" },
          "paddingX": { "$value": "{spacing.size.6}" },
          "paddingY": { "$value": "{spacing.size.3}" },
          "fontSize": { "$value": "{typography.font.size.base}" },
          "borderRadius": { "$value": "{border.radius.lg}" }
        },
        "xl": {
          "height": { "$value": "3.5rem" },
          "paddingX": { "$value": "{spacing.size.8}" },
          "paddingY": { "$value": "{spacing.size.4}" },
          "fontSize": { "$value": "{typography.font.size.lg}" },
          "borderRadius": { "$value": "{border.radius.xl}" }
        }
      },
      "variant": {
        "primary": {
          "background": { "$value": "{color.brand.primary.500}" },
          "color": { "$value": "{color.neutral.white}" },
          "borderColor": { "$value": "{color.brand.primary.500}" },
          "hover": {
            "background": { "$value": "{color.brand.primary.600}" },
            "borderColor": { "$value": "{color.brand.primary.600}" }
          }
        },
        "secondary": {
          "background": { "$value": "{color.neutral.white}" },
          "color": { "$value": "{color.neutral.gray.900}" },
          "borderColor": { "$value": "{color.neutral.gray.300}" },
          "hover": {
            "background": { "$value": "{color.neutral.gray.50}" },
            "borderColor": { "$value": "{color.neutral.gray.400}" }
          }
        },
        "outline": {
          "background": { "$value": "transparent" },
          "color": { "$value": "{color.brand.primary.500}" },
          "borderColor": { "$value": "{color.brand.primary.500}" },
          "hover": {
            "background": { "$value": "{color.brand.primary.50}" }
          }
        },
        "gradient": {
          "background": { "$value": "{color.gradient.primary}" },
          "color": { "$value": "{color.neutral.white}" },
          "borderColor": { "$value": "transparent" },
          "hover": {
            "background": { "$value": "linear-gradient(135deg, {color.brand.primary.600} 0%, {color.brand.primary.800} 100%)" }
          }
        }
      }
    },
    "card": {
      "$description": "Card component tokens",
      "padding": {
        "sm": { "$value": "{spacing.size.4}" },
        "md": { "$value": "{spacing.size.6}" },
        "lg": { "$value": "{spacing.size.8}" },
        "xl": { "$value": "{spacing.size.10}" }
      },
      "borderRadius": { "$value": "{border.radius.lg}" },
      "shadow": {
        "default": { "$value": "{shadow.elevation.sm}" },
        "hover": { "$value": "{shadow.elevation.md}" },
        "featured": { "$value": "{shadow.elevation.lg}" }
      },
      "background": {
        "default": { "$value": "{color.neutral.white}" },
        "elevated": { "$value": "{color.neutral.white}" },
        "colored": { "$value": "{color.brand.primary.50}" }
      }
    },
    "input": {
      "$description": "Form input component tokens",
      "height": {
        "sm": { "$value": "2rem" },
        "md": { "$value": "2.5rem" },
        "lg": { "$value": "3rem" }
      },
      "paddingX": { "$value": "{spacing.size.3}" },
      "paddingY": { "$value": "{spacing.size.2}" },
      "borderRadius": { "$value": "{border.radius.md}" },
      "borderWidth": { "$value": "{border.width.1}" },
      "borderColor": {
        "default": { "$value": "{color.neutral.gray.300}" },
        "focus": { "$value": "{color.brand.primary.500}" },
        "error": { "$value": "{color.semantic.error.500}" }
      },
      "fontSize": { "$value": "{typography.font.size.sm}" },
      "background": { "$value": "{color.neutral.white}" }
    },
    "badge": {
      "$description": "Badge component tokens",
      "paddingX": { "$value": "{spacing.size.2}" },
      "paddingY": { "$value": "{spacing.size.0.5}" },
      "borderRadius": { "$value": "{border.radius.full}" },
      "fontSize": { "$value": "{typography.font.size.xs}" },
      "fontWeight": { "$value": "{typography.font.weight.medium}" },
      "variant": {
        "primary": {
          "background": { "$value": "{color.brand.primary.100}" },
          "color": { "$value": "{color.brand.primary.700}" }
        },
        "secondary": {
          "background": { "$value": "{color.brand.secondary.100}" },
          "color": { "$value": "{color.brand.secondary.700}" }
        },
        "success": {
          "background": { "$value": "{color.semantic.success.100}" },
          "color": { "$value": "{color.semantic.success.700}" }
        }
      }
    }
  }
}
