        "800": { "$value": "#9d174d" },
        "900": { "$value": "#831843" },
        "950": { "$value": "#500724" }
      }
    },
    "neutral": {
      "$description": "Neutral grayscale colors",
      "white": { "$value": "#ffffff" },
      "gray": {
        "50": { "$value": "#f9fafb" },
        "100": { "$value": "#f3f4f6" },
        "200": { "$value": "#e5e7eb" },
        "300": { "$value": "#d1d5db" },
