        "900": { "$value": "#111827" },
        "950": { "$value": "#030712" }
      },
      "black": { "$value": "#000000" }
    },
    "semantic": {
      "$description": "Semantic colors for UI states",
      "success": {
        "50": { "$value": "#f0fdf4" },
        "500": { "$value": "#22c55e" },
        "700": { "$value": "#15803d" }
      },
      "warning": {
        "50": { "$value": "#fffbeb" },
        "500": { "$value": "#f59e0b" },
        "700": { "$value": "#b45309" }
      },
      "error": {
        "50": { "$value": "#fef2f2" },
        "500": { "$value": "#ef4444" },
        "700": { "$value": "#b91c1c" }
      },
      "info": {
        "50": { "$value": "#f0f9ff" },
        "500": { "$value": "{color.brand.primary.500}" },
        "700": { "$value": "{color.brand.primary.700}" }
      }
    },
    "gradient": {
      "$description": "Gradient definitions - Vibrant new color scheme",
      "primary": { "$value": "linear-gradient(135deg, {color.brand.primary.500} 0%, {color.brand.primary.700} 100%)" },
      "secondary": { "$value": "linear-gradient(135deg, {color.brand.secondary.500} 0%, {color.brand.secondary.700} 100%)" },
      "accent": { "$value": "linear-gradient(135deg, {color.brand.accent.500} 0%, {color.brand.accent.700} 100%)" },
      "hero": { "$value": "linear-gradient(135deg, {color.brand.primary.600} 0%, {color.brand.secondary.800} 100%)" },
      "sunset": { "$value": "linear-gradient(135deg, {color.brand.primary.500} 0%, {color.brand.accent.600} 50%, {color.brand.secondary.700} 100%)" }
    }
  }
}
