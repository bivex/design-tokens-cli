{
  "typography": {
    "$description": "Typography system for landing page UI kit",
    "font": {
      "$description": "Font family definitions",
      "family": {
        "sans": { "$value": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif" },
        "mono": { "$value": "'JetBrains Mono', 'Fira Code', monospace" },
        "display": { "$value": "'Cal Sans', 'Inter', sans-serif" }
      },
      "weight": {
        "$description": "Font weight values",
        "thin": { "$value": "100" },
        "light": { "$value": "300" },
        "normal": { "$value": "400" },
        "medium": { "$value": "500" },
        "semibold": { "$value": "600" },
        "bold": { "$value": "700" },
        "extrabold": { "$value": "800" },
        "black": { "$value": "900" }
      },
      "size": {
        "$description": "Font size scale",
        "xs": { "$value": "0.75rem" },
        "sm": { "$value": "0.875rem" },
        "base": { "$value": "1rem" },
        "lg": { "$value": "1.125rem" },
        "xl": { "$value": "1.25rem" },
        "2xl": { "$value": "1.5rem" },
        "3xl": { "$value": "1.875rem" },
        "4xl": { "$value": "2.25rem" },
        "5xl": { "$value": "3rem" },
        "6xl": { "$value": "3.75rem" },
        "7xl": { "$value": "4.5rem" },
        "8xl": { "$value": "6rem" },
        "9xl": { "$value": "8rem" }
      },
      "lineHeight": {
        "$description": "Line height values",
        "none": { "$value": "1" },
        "tight": { "$value": "1.25" },
        "snug": { "$value": "1.375" },
        "normal": { "$value": "1.5" },
        "relaxed": { "$value": "1.625" },
        "loose": { "$value": "2" }
      },
      "letterSpacing": {
        "$description": "Letter spacing values",
        "tighter": { "$value": "-0.05em" },
        "tight": { "$value": "-0.025em" },
        "normal": { "$value": "0em" },
        "wide": { "$value": "0.025em" },
        "wider": { "$value": "0.05em" },
        "widest": { "$value": "0.1em" }
      }
    },
    "text": {
      "$description": "Text style presets",
      "display": {
        "1": {
          "fontSize": { "$value": "{typography.font.size.8xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.tight}" },
          "fontWeight": { "$value": "{typography.font.weight.bold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.tight}" },
          "fontFamily": { "$value": "{typography.font.family.display}" }
        },
        "2": {
          "fontSize": { "$value": "{typography.font.size.7xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.tight}" },
          "fontWeight": { "$value": "{typography.font.weight.bold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.tight}" },
          "fontFamily": { "$value": "{typography.font.family.display}" }
        },
        "3": {
          "fontSize": { "$value": "{typography.font.size.6xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.tight}" },
          "fontWeight": { "$value": "{typography.font.weight.bold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.tight}" },
          "fontFamily": { "$value": "{typography.font.family.display}" }
        }
      },
      "heading": {
        "1": {
          "fontSize": { "$value": "{typography.font.size.5xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.tight}" },
          "fontWeight": { "$value": "{typography.font.weight.bold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.tight}" }
        },
        "2": {
          "fontSize": { "$value": "{typography.font.size.4xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.tight}" },
          "fontWeight": { "$value": "{typography.font.weight.bold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.tight}" }
        },
        "3": {
          "fontSize": { "$value": "{typography.font.size.3xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.snug}" },
          "fontWeight": { "$value": "{typography.font.weight.semibold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.normal}" }
        },
        "4": {
          "fontSize": { "$value": "{typography.font.size.2xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.snug}" },
          "fontWeight": { "$value": "{typography.font.weight.semibold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.normal}" }
        },
        "5": {
          "fontSize": { "$value": "{typography.font.size.xl}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.snug}" },
          "fontWeight": { "$value": "{typography.font.weight.semibold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.normal}" }
        },
        "6": {
          "fontSize": { "$value": "{typography.font.size.lg}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.snug}" },
          "fontWeight": { "$value": "{typography.font.weight.semibold}" },
          "letterSpacing": { "$value": "{typography.font.letterSpacing.normal}" }
        }
      },
      "body": {
        "large": {
          "fontSize": { "$value": "{typography.font.size.lg}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.relaxed}" },
          "fontWeight": { "$value": "{typography.font.weight.normal}" }
        },
        "base": {
          "fontSize": { "$value": "{typography.font.size.base}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.relaxed}" },
          "fontWeight": { "$value": "{typography.font.weight.normal}" }
        },
        "small": {
          "fontSize": { "$value": "{typography.font.size.sm}" },
          "lineHeight": { "$value": "{typography.font.lineHeight.relaxed}" },
          "fontWeight": { "$value": "{typography.font.weight.normal}" }
        }
      },
      "caption": {
        "fontSize": { "$value": "{typography.font.size.xs}" },
        "lineHeight": { "$value": "{typography.font.lineHeight.normal}" },
        "fontWeight": { "$value": "{typography.font.weight.medium}" },
        "letterSpacing": { "$value": "{typography.font.letterSpacing.wide}" }
      }
    }
  }
}
