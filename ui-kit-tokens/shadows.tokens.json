{
  "shadow": {
    "$description": "Shadow system for landing page UI kit",
    "color": {
      "$description": "Shadow color variations",
      "sm": { "$value": "rgba(0, 0, 0, 0.05)" },
      "md": { "$value": "rgba(0, 0, 0, 0.1)" },
      "lg": { "$value": "rgba(0, 0, 0, 0.15)" },
      "xl": { "$value": "rgba(0, 0, 0, 0.25)" },
      "colored": { "$value": "rgba({color.brand.primary.500}, 0.25)" }
    },
    "elevation": {
      "$description": "Elevation shadow presets",
      "none": { "$value": "none" },
      "xs": { "$value": "0 1px 2px 0 {shadow.color.sm}" },
      "sm": { "$value": "0 1px 3px 0 {shadow.color.sm}, 0 1px 2px -1px {shadow.color.sm}" },
      "md": { "$value": "0 4px 6px -1px {shadow.color.md}, 0 2px 4px -2px {shadow.color.md}" },
      "lg": { "$value": "0 10px 15px -3px {shadow.color.md}, 0 4px 6px -4px {shadow.color.md}" },
      "xl": { "$value": "0 20px 25px -5px {shadow.color.lg}, 0 8px 10px -6px {shadow.color.lg}" },
      "2xl": { "$value": "0 25px 50px -12px {shadow.color.xl}" },
      "inner": { "$value": "inset 0 2px 4px 0 {shadow.color.sm}" },
      "colored": { "$value": "0 10px 15px -3px {shadow.color.colored}, 0 4px 6px -4px {shadow.color.colored}" }
    },
    "glow": {
      "$description": "Glow effect shadows",
      "primary": { "$value": "0 0 20px {shadow.color.colored}" },
      "secondary": { "$value": "0 0 20px rgba({color.brand.secondary.500}, 0.25)" },
      "success": { "$value": "0 0 20px rgba({color.semantic.success.500}, 0.25)" },
      "warning": { "$value": "0 0 20px rgba({color.semantic.warning.500}, 0.25)" },
      "error": { "$value": "0 0 20px rgba({color.semantic.error.500}, 0.25)" }
    }
  }
}
